exec_always feh --bg-fill ~/Pictures/Wallpapers/mountains.jpg 

# update terminal output
exec_always "xrdb ~/.Xresources"

# enable numlock on startup
exec_always --no-startup-id numlockx on

# enable transparency
exec_always compton

# restart i3 to solve issues with background image
exec i3 restart

# launch programs on startup
exec nm-applet

# hide cursor after 1 second
exec_always "unclutter -idle 1 &"

# run syncthing in background
exec_always "syncthing -no-browser"

# use GB and LT keyboards
